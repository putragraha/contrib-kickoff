<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/neutral_900"
        app:layout_constraintTop_toTopOf="@id/siv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/siv_avatar"
        app:layout_constraintStart_toEndOf="@id/siv_avatar"
        tools:text="android-trinity" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/neutral_700"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_project_name"
        app:layout_constraintStart_toStartOf="@id/tv_project_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="android-trinity is tiny proactive framework with much of the scaffolding code required to start a new Android Application." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="10sp"
        android:textColor="@color/neutral_700"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_star_neutral_700"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="@id/tv_project_name"
        tools:text="55"
        tools:ignore="SmallSp"  />

    <TextView
        android:id="@+id/tv_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="10sp"
        android:textColor="@color/neutral_700"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/actv_star"
        app:layout_constraintTop_toTopOf="@id/actv_star"
        app:layout_constraintStart_toEndOf="@id/actv_star"
        tools:text="Updated 15 hours ago"
        tools:ignore="SmallSp"  />

</androidx.constraintlayout.widget.ConstraintLayout>